<Window x:Class="HsEmulator.ControlWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ControlWindow" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Button Content="Step" Click="OnStep"></Button>
        <Button Content="Full Battle" Grid.Row="1" Click="OnBattle"></Button>
        <Button Content="1000" Grid.Row="2" Click="OnBattles"></Button>
    </Grid>
</Window>
