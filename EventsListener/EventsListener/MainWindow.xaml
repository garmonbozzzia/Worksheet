<Window x:Class="EventsListener.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid Background="Black">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20*" />
            <ColumnDefinition Width="20*" />
            <!--This will make any control in this column of grid take 2/5 of total width-->
            <ColumnDefinition Width="3*" />
            <!--This will make any control in this column of grid take 3/5 of total width-->
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition MinHeight="30" />
        </Grid.RowDefinitions>
            <ScrollViewer Grid.Column="1">
                <TextBlock  Name="TextBlock" TextWrapping="Wrap" Text="TextBlock" Background="White" HorizontalAlignment="Stretch" />
            </ScrollViewer>
        <ScrollViewer Grid.Column="0">
            <ListBox Name="ListBox" SelectionChanged="ListBox_OnSelectionChanged"></ListBox></ScrollViewer>
        <Button Grid.Column="2" Name="Button1" Content="Button"  />
    </Grid>
</Window>
